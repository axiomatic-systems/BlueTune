# BlueTune specifics
env['BLT_CPU_CONFIG_NO_FLOAT'] = True
env['ATX_SYSTEM_SOURCES']={'System/StdC':'AtxStdc[!D]*.c', 
                           'System/Bsd':'*.c', 
                           'System/Posix':'*.c',
                           'System/Android':'*.c'}
env['ATX_EXTRA_LIBS']=['m']
